{
  "name": "invastors-bacura",
  "version": "1.0.0",
  "private": true,
  "description": "منصة باكورة الاستثمارية - Bakurah Investors Portal",
  "main": "backend/src/server.ts",
  "workspaces": ["frontend"],
  "scripts": {
    "dev": "nodemon backend/src/server.ts",
    "build": "node scripts/prepare-env.js && npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p backend/tsconfig.json",
    "build:frontend": "npm run build --workspace frontend",
    "prepare-env": "node scripts/prepare-env.js",
    "start": "node backend/dist/server.js",
    "lint": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:story-3.4": "jest backend/tests/request.controller.test.ts --testNamePattern=presignAttachment",
    "clean": "npm run clean:backend && npm run clean:frontend && npm run clean:cache",
    "clean:backend": "node -e \"require('fs').rmSync('backend/dist', {recursive: true, force: true}); require('fs').rmSync('backend/.tsbuildinfo', {force: true})\"",
    "clean:frontend": "npm run clean --workspace frontend",
    "clean:cache": "node -e \"const fs=require('fs'); ['node_modules/.cache', 'frontend/node_modules/.vite', 'frontend/dist', '.vite'].forEach(p=>fs.rmSync(p,{recursive:true,force:true}))\""
  },
  "keywords": [],
  "author": "Bacura Technologies Team",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.80.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "postgres": "^3.4.7",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "serverless-http": "^3.2.0",
    "supabase": "^2.54.11",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
